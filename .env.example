# ============================================
# Gaza 系统环境变量配置文件
# ============================================
# 复制此文件为 .env 并根据实际情况修改配置值

# ==================== 数据库配置 ====================
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=gaza_root_2024
MYSQL_DATABASE=gaza_db
MYSQL_USER=gaza_user
MYSQL_PASSWORD=gaza_pass_2024

# ==================== Redis配置 ====================
REDIS_PORT=6379
REDIS_PASSWORD=gaza_redis_2024

# ==================== Gaza Server (主后端服务) ====================
GAZA_SERVER_PORT=48080
SPRING_PROFILES_ACTIVE=prod
GAZA_SERVER_JAVA_OPTS=-Xms512m -Xmx1024m -Djava.security.egd=file:/dev/./urandom

# ==================== File Preview Server (文件预览服务) ====================
FILE_PREVIEW_PORT=8012

# ==================== MinerU Service (PDF转Markdown服务) ====================
MINERU_API_PORT=8000
MINERU_MODEL_SOURCE=modelscope
# 可选值: modelscope, local

# ==================== Gaza UI (管理后台前端) ====================
GAZA_UI_PORT=80
VITE_APP_TITLE=Gaza智能管理系统

# ==================== Candidate App (HR候选人应用) ====================
CANDIDATE_APP_PORT=3000
CANDIDATE_APP_NAME=候选人简历填写系统
CANDIDATE_APP_VERSION=1.0.0

# Candidate App OAuth2配置
CANDIDATE_ACCESS_TOKEN_AES_KEY=your-32-char-aes-key-here-123456
CANDIDATE_OAUTH2_CLIENT_ID=your-client-id
CANDIDATE_OAUTH2_CLIENT_SECRET=your-client-secret
CANDIDATE_OAUTH2_USERNAME=oauth-user
CANDIDATE_OAUTH2_PASSWORD=oauth-password
CANDIDATE_OAUTH2_TOKEN_URL=http://gaza-server:48080/admin-api/system/oauth2/token
CANDIDATE_OAUTH2_FILE_UPLOAD_URL=http://gaza-server:48080/admin-api/infra/file/upload
CANDIDATE_ADMIN_SERVICE_BASE_URL=http://gaza-server:48080
CANDIDATE_TENANT_ID=600

# Candidate App 部署选项
CANDIDATE_RUN_MIGRATIONS=false
CANDIDATE_REGENERATE_PRISMA=false

# ==================== 云端部署配置（可选） ====================
# CLOUD_REGION=cn-hangzhou
# CLOUD_INSTANCE_TYPE=ecs.c6.xlarge

